@model _23DH112330_MyStore.Models.ViewModel.Cart
@{
    Layout = "~/Views/Shared/_CustomerLayout.cshtml";
}

<style>
    .grid_column-3 {
        padding-left: 12px;
        padding-right: 12px;
        width: 28%;
    }

    .grid_column-5 {
        padding-left: 12px;
        padding-right: 12px;
        width: 41.6666%;
    }

    .grid_column-4 {
        padding-left: 12px;
        padding-right: 12px;
        width: 30.3333%;
    }

    .grid_column-7 {
        padding-left: 12px;
        padding-right: 12px;
        width: 70%;
    }

    .product-preview {
        background-color: white;
        padding: 16px;
        border-radius: 8px;
        margin: 10px 0;
    }

    .product-preview__img {
        padding-top: 100%;
        background-size: contain;
        border-radius: 8px;
    }

    h3 {
        margin-top: 0;
    }

    .category__heading-detail {
        margin-top: -15px;
        margin-left: -15px;
    }
</style>
<script language="JavaScript">
    function cartUpdateQuantity(id, newQuantity) {
        if (newQuantity < 1) return;
        const form = document.createElement('form');
        form.method = 'post';
        form.action = '@Url.Action("UpdateQuantity", "Cart");

        const idInput = document.createElement('input');
        idInput.type = 'hidden';
        idInput.name = 'id';
        idInput.value = id;
        form.appendChild(idInput);

        const quantityInput = document.createElement('input');
        quantityInput.type = 'hidden';
        quantityInput.name = 'quantity';
        quantityInput.value = newQuantity;
        form.appendChild(quantityInput);

        document.body.appendChild(form);
        form.submit();
    }
</script>
<html>
