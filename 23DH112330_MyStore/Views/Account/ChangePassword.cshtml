@model _23DH112330_MyStore.Models.ViewModel.ChangePasswordVM
@{
    Layout = User.Identity.IsAuthenticated ? "~/Views/Shared/_CustomerLayoutLoggedIn.cshtml" : "~/Views/Shared/_CustomerLayout.cshtml";
}

<style>
    .grid_column-3 {
        padding-left: 12px;
        padding-right: 12px;
        width: 28%;
    }

    .grid_column-5 {
        padding-left: 12px;
        padding-right: 12px;
        width: 41.6666%;
    }

    .grid_column-4 {
        padding-left: 12px;
        padding-right: 12px;
        width: 30.3333%;
    }

    .grid_column-7 {
        padding-left: 12px;
        padding-right: 12px;
        width: 70%;
    }

    .product-preview {
        background-color: white;
        padding: 16px;
        border-radius: 8px;
        margin: 10px 0;
    }

    .product-preview__img {
        padding-top: 100%;
        background-size: contain;
        border-radius: 8px;
    }

    h3 {
        margin-top: 0;
    }

    .category__heading-detail {
        margin-top: -15px;
        margin-left: -15px;
    }
</style>
<html>
<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link href="~/Content/script/All-css.css" rel="stylesheet" />
    <title>
        IDK MAN
    </title>
</head>
<body>

    <div class="grid" style=" justify-content: center;">
        <div class="grid__row" style="width:70%">
            <div class="product-preview" style=" font-size: large; display: flex; justify-content: center; margin: auto; width: 90%;">
                @using (Html.BeginForm("ChangePassword", "Account", FormMethod.Post, new { @style = "width:100%" }))
                {
                    @Html.AntiForgeryToken()

                    @Html.ValidationSummary(true, "", new { @class = "text-dange" })
                    <div>
                        <h2>Thay đổi mật khẩu</h2>
                    </div>
                    <div>
                        <label class="control-label col-md-2">Mật khẩu cũ</label>
                        <div class="col-md-4">
                            @Html.PasswordFor(m => m.OldPassword, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.OldPassword)
                        </div>
                    </div>
                    <div>
                        <label class="control-label col-md-2">Mật khẩu mới</label>
                        <div class="col-md-4">
                            @Html.PasswordFor(m => m.NewPassword, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.NewPassword)
                        </div>
                    </div>
                    <div>
                        <label class="control-label col-md-2">Nhập lại mật khẩu mới</label>
                        <div class="col-md-4">
                            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.ConfirmPassword)
                        </div>
                    </div>
                    <div>
                        <input type="submit" value="Đổi mật khẩu" class="btn btn-info accountbtn" /><br />
                    </div>

                }
            </div>
        </div>
    </div>
</body>
</html>
