@model _23DH112330_MyStore.Models.Customer
@{
    Layout = User.Identity.IsAuthenticated ? "~/Views/Shared/_CustomerLayoutLoggedIn.cshtml" : "~/Views/Shared/_CustomerLayout.cshtml";
}

<style>
    .grid_column-3 {
        padding-left: 12px;
        padding-right: 12px;
        width: 28%;
    }

    .grid_column-5 {
        padding-left: 12px;
        padding-right: 12px;
        width: 41.6666%;
    }

    .grid_column-4 {
        padding-left: 12px;
        padding-right: 12px;
        width: 30.3333%;
    }

    .grid_column-7 {
        padding-left: 12px;
        padding-right: 12px;
        width: 70%;
    }

    .product-preview {
        background-color: white;
        padding: 16px;
        border-radius: 8px;
        margin: 10px 0;
    }

    .product-preview__img {
        padding-top: 100%;
        background-size: contain;
        border-radius: 8px;
    }

    h3 {
        margin-top: 0;
    }

    .category__heading-detail {
        margin-top: -15px;
        margin-left: -15px;
    }
</style>
<html>
<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link href="~/Content/script/All-css.css" rel="stylesheet" />
    <title>
        IDK MAN
    </title>
</head>
<body>

    <div class="grid" style=" justify-content: center;">
        <div class="grid__row" style="width:70%">
            <div class="product-preview" style=" font-size: large; justify-content: center; margin: auto; width: 90%;">

                @Html.AntiForgeryToken()

                @Html.ValidationSummary(true, "", new { @class = "text-dange" })
                <div>
                    <h2>Thông Tin Khách Hàng</h2>
                </div>
                <div>
                    <div style="width:100%" class="control-label col-md-2">Họ và tên: @Model.CustomerName</div>
                </div>
                <div>
                    <div style="width:100%" class="control-label col-md-2">Email: @Model.CustomerEmail</div>
                </div>
                <div>
                    <div style="width:100%" class="control-label col-md-2">SĐT: @Model.CustomerPhone</div>
                </div>
                <div>
                    <div style="width:100%" class="control-label col-md-2">Địa chỉ: @Model.CustomerAddress</div>
                </div>
                <div>
                    <a class="btn btn-info accountbtn" href="@Url.Action("UpdateProfile", "Account")">Cập Nhật Thông Tin</a><br />
                    <a class="btn btn-info accountbtn" href="@Url.Action("ChangePassword", "Account")">Đổi Mật Khẩu</a><br />
                    <a class="btn btn-info accountbtn" href="@Url.Action("MyOrder", "Order")">Đơn Hàng Của Tôi</a><br />
                </div>


            </div>
        </div>
    </div>
</body>
</html>

