@model _23DH112330_MyStore.Models.ViewModel.MyOrderListVM
@{
    Layout = User.Identity.IsAuthenticated ? "~/Views/Shared/_CustomerLayoutLoggedIn.cshtml" : "~/Views/Shared/_CustomerLayout.cshtml";
}

<style>
    .grid_column-3 {
        padding-left: 12px;
        padding-right: 12px;
        width: 28%;
    }

    .grid_column-5 {
        padding-left: 12px;
        padding-right: 12px;
        width: 41.6666%;
    }

    .grid_column-4 {
        padding-left: 12px;
        padding-right: 12px;
        width: 30.3333%;
    }

    .grid_column-7 {
        padding-left: 12px;
        padding-right: 12px;
        width: 70%;
    }

    .product-preview {
        background-color: white;
        padding: 16px;
        border-radius: 8px;
        margin: 10px 0;
    }

    .product-preview__img {
        padding-top: 100%;
        background-size: contain;
        border-radius: 8px;
    }

    h3 {
        margin-top: 0;
    }

    .category__heading-detail {
        margin-top: -15px;
        margin-left: -15px;
    }
</style>
<h2>Danh sách đơn hàng của bạn</h2>

<html>
<head>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link href="~/Content/script/All-css.css" rel="stylesheet" />
    <title>
        IDK MAN
    </title>
</head>
<body>


    <div class="grid" style="width:100%">
        <div class="grid__row" style="display:flex; width:100%; font-size:16px">
            <div class="grid_column-7">
                @if (!Model.Orders.Any())
                {<p>Bạn chưa có đơn hàng nào</p> }
                else
                {
                    <div class="product-preview">
                        <div class="grid__row" style="padding: 0 0;display:flex; justify-content: space-between">
                            <span class="grid_column-2">Mã đơn hàng</span>
                            <span class="grid_column-3">Ngày đặt hàng</span>
                            <span class="grid_column-5">Tổng giá trị</span>
                            <span class="grid_column-2">Trạng thái thanh toán</span>
                        </div>
                    </div>
                    <div class="product-preview">
                        @foreach (var order in Model.Orders)
                        {
                            <div>
                                <div class="grid__row" style="padding:0 0; display:flex; justify-content:space-between">
                                    <div class="grid_column-2" style="display:flex">
                                        <a href="@Url.Action("OrderSuccess", "Order", new {id = order.OrderID})">@order.OrderID</a>
                                    </div>
                                    <span class="grid_column-3" style="padding-left: 50px;">
                                        @order.OrderDate.ToString("dd/MM/yyyy").<sup>₫</sup>
                                    </span>
                                    <div class="grid_column-5" style="display:flex; gap:5px;height:30px;">
                                        @order.TotalAmount đ
                                    </div>
                                    <span class="grid_column-2">@order.PaymentStatus<sup>₫</sup></span>
                                </div>
                            </div>
                        }
                    </div>
                }
            </div>

            <div class="grid_column-3">
                <div class="product-preview">
                    <div>
                        @Html.ActionLink("Quay lại trang chủ", "Index", "Home", new
                        {
                            @class = "btn btn-danger cart-btn",
                            style = "margin-top:5px;font-size:100%;width:100%"

                        })
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>

