@model _23DH112330_MyStore.Models.ViewModel.CheckoutVM
@{
    Layout = User.Identity.IsAuthenticated ? "~/Views/Shared/_CustomerLayoutLoggedIn.cshtml" : "~/Views/Shared/_CustomerLayout.cshtml";
}

<style>
    .grid_column-3 {
        padding-left: 12px;
        padding-right: 12px;
        width: 28%;
    }
    .grid_column-5 {
        padding-left: 12px;
        padding-right: 12px;
        width: 41.6666%;
    }

    .grid_column-4 {
        padding-left: 12px;
        padding-right: 12px;
        width: 30.3333%;
    }

    .grid_column-7 {
        padding-left: 12px;
        padding-right: 12px;
        width: 70%;
    }
    .product-preview{
        background-color: white;
        padding:16px;
        border-radius:8px;
        margin:10px 0;
    }
    .product-preview__img{
        padding-top:100%;
        background-size:contain;
        border-radius:8px;
    }
    h3{
        margin-top:0;
    }
    .category__heading-detail {
        margin-top: -15px;
        margin-left: -15px;
    }
</style>
<html>
<head>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
    <link rel="stylesheet" type="text/css" href="~/Content/script/All-css.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <title>
        IDK MAN
    </title>
    <script>
        function enableAddressEdit() {
            document.getElementById("shippingAddress").removeAttribute("readonly");
            document.getElementById("newAddressGroup").style.display = "block";
        }
        function updateShippingAddress() {
            var newAddress = document.getElementById("newShippingAddress").value;
            if (newAddress) {
                document.getElementById("shippingAddress").value = newAddress;
            }
        }
    </script>
</head>
<body>
    @using (Html.BeginForm("Checkout", "Order", FormMethod.Post, new { role = "form" }))
    {
        <div class="grid__row" style="display:flex; font-size:200%">
            <div class="grid_column-7">
                <div class="product-preview">
                    <h3 class="category__heading category__heading-detail">Chọn hình thức giao hàng</h3>
                    @Html.AntiForgeryToken()
                    @foreach (var item in Model.CartItems)
                    {
                        <div class="grid" style="border:1px solid; border-radius:8px;padding:4px;">
                            <div style="display: flex; justify-content: space-between; width: 100%">
                                <div style="display:flex;width:70%">
                                    <img width="48" height="48" src="@item.ProductImage" />
                                    <div>
                                        @item.ProductName
                                        <p>SL: &nbsp; @item.Quantity</p>
                                    </div>
                                </div>
                                <span style="width:30%">
                                    @item.TotalPrice đ
                                </span>
                            </div>
                        </div>
                    }
                </div>

                <div class="product-preview">
                    <h3 class="category__heading category__heading-detail">Chọn hình thức thanh toán</h3>
                    @Html.Label("Phương thức thanh toán", new { @class = "control-label" })
                    <div class="col-md-10">
                        @Html.RadioButtonFor(m => m.PaymentMethod, "Tiền mặt")Tiền mặt<br />

                        @Html.RadioButtonFor(m => m.PaymentMethod, "Paypal") Paypal<br />

                        @Html.RadioButtonFor(m => m.PaymentMethod, "Mua trước trả sau")Mua trước trả sau
                    </div>
                </div>
            </div>

            <div class="grid_column-3">
                <div class="product-preview">
                    <h3 class="category__heading category__heading-detail">Giao tới</h3>
                    <div>
                        @Html.LabelFor(m => m.ShippingAddress, new { @class = "control-label" })
                        <div class="col-md-10">
                            @Html.TextBoxFor(m => m.ShippingAddress, new { @class = " form-control", @readonly = "readonly", @id = "shippingAddress", @style = "font-size:100%" })
                            @Html.ValidationMessageFor(m => m.ShippingAddress)
                            <button style="font-size:100%" type="button" class="btn btn-link" onclick="enableAddressEdit()">Chỉnh sửa</button>
                        </div>
                    </div>
                    <div>
                        @Html.Label("Địa chỉ mới", new { @class = "control-label" })
                        <div class="col-md-10">
                            <input style="font-size:100%" type="text" id="newShippingAddress" class="form-control" />
                        </div>
                    </div>
                </div>
                <div class="product-preview">
                    <h3 class="category__heading category__heading-detail">Phương thức giao hàng</h3>
                    <div>
                        <div class="col-md-10">
                            @Html.RadioButtonFor(m => m.DeliveryMethod, "Giao hàng nhanh")Giao hàng nhanh<br />
                            @Html.RadioButtonFor(m => m.DeliveryMethod, "Giao hàng tiết kiệm")Giao hàng tiết kiệm
                            @Html.ValidationMessageFor(m => m.DeliveryMethod)
                        </div>
                    </div>
                </div>
                <div class="product-preview">
                    <h3 style="margin-bottom:10px;" class="category__heading category__heading-detail">Đơn hàng</h3>
                    <h3 class="category__headingl">
                        @Html.DisplayFor(m => m.TotalAmount) &nbsp; đ
                    </h3>
                    <input type="submit" value="Đặt hàng" onclick="updateShippingAddress" class="btn btn-danger" style="width:100%; font-size:100%" />
                </div>
            </div>
        </div>
    }

</body>
</html>