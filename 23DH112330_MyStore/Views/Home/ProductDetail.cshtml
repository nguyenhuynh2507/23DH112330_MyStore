@model _23DH112330_MyStore.Models.ViewModel.ProductDetailVM
@{
    Layout = "~/Views/Shared/_CustomerLayout.cshtml";
}

<style>
    .grid_column-3 {
        padding-left: 12px;
        padding-right: 12px;
        width: 28%;
    }

    .grid_column-5 {
        padding-left: 12px;
        padding-right: 12px;
        width: 41.6666%;
    }

    .grid_column-4 {
        padding-left: 12px;
        padding-right: 12px;
        width: 30.3333%;
    }

    .product-preview {
        background-color: white;
        padding: 16px;
        border-radius: 8px;
        margin: 10px 0;
    }

    .product-preview__img {
        padding-top: 100%;
        background-size: contain;
        border-radius: 8px;
    }

    h3 {
        margin-top: 0;
    }

    .category__heading-detail {
        margin-top: -15px;
        margin-left: -15px;
    }
</style>

<html>
<head>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
    <link rel="stylesheet" type="text/css" href="~/Content/script/All-css.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
</head>
<body>
    <div class="header-ads" style=" background-color: #EFFFF4; height:40px;padding-top:20px;">
        <a href="" style="text-decoration: none;">
            <div style="color: #00AB56; display: flex; justify-content: center; font-size: 12px; font-weight: 600; line-height: 150%; padding-left: 4px; gap:4px;">
                Freeship đơn từ 45k, giảm nhiều hơn cùng
                <img style="width:79px; height:16px;" src="https://salt.tikicdn.com/ts/upload/a7/18/8c/910f3a83b017b7ced73e80c7ed4154b0.png" />
            </div>
        </a>
    </div>
    <header class="header">
        <div class="grid">
            <nav class="header__navbar">
                <ul class="header__navbar-list">
                    <li class="header__navbar-item">
                        <a href="@Url.Action("Index", "Home")"><img src="https://salt.tikicdn.com/ts/upload/0e/07/78/ee828743c9afa9792cf20d75995e134e.png" width="96" height="40"></a>
                        <br />
                        <a href="@Url.Action("Index", "Home")" class="header__navbar-link header__navbar-link--totnhanh">Tốt &amp; nhanh</a>
                    </li>
                </ul>
                @using (Html.BeginForm("Index", "Home", FormMethod.Get))
                {
                    <div class="header__search">
                        <i class="search-icon fas fa-search"></i>
                        @Html.TextBoxFor(m => m.SearchTerm, new
                   {
                       @class = "header__search-input",
                       placeholder = "30 ngày đổi trả"
                   })
                        <div class="search-submit">
                            <button class="search-submit--btn">Tìm kiếm</button>
                        </div>
                    </div>
                }
                <ul class="header__navbar-list">
                    <li class="header__navbar-item">
                        <a href="@Url.Action("Register", "Account")" class="header__navbar-link"><i class="header__navbar-icon fas fa-home"></i>Đăng Kí</a>
                    </li>
                    <li class="header__navbar-item">
                        <a href="@Url.Action("Login", "Account")" class="header__navbar-link header__navbar-link--separate"><i class="header__navbar-icon far fa-smile">Đăng Nhập</i></a>
                    </li>
                    <li class="header__navbar-item">
                        <a href="@Url.Action("Index", "Cart")" class="header__navbar-link  header__navbar-link--shop"><i class="header__navbar-icon fas fa-shopping-cart"></i></a>
                    </li>
                </ul>
            </nav>
            <div class="quicksearch-address">
                <div class="searchoption">
                    <a href="" class="header__navbar-link header__navbar-linkqs">điện gia dụng</a>
                    <a href="" class="header__navbar-link header__navbar-linkqs">xe cộ</a>
                    <a href="" class="header__navbar-link header__navbar-linkqs">mẹ &amp; bé</a>
                    <a href="" class="header__navbar-link header__navbar-linkqs">khỏe đẹp</a>
                    <a href="" class="header__navbar-link header__navbar-linkqs">nhà cửa</a>
                    <a href="" class="header__navbar-link header__navbar-linkqs">sách</a>
                    <a href="" class="header__navbar-link header__navbar-linkqs">thể thao</a>
                    <a href="" class="header__navbar-link header__navbar-linkqs">điện thoại</a>
                    <a href="" class="header__navbar-link header__navbar-linkqs">ipad gen 10</a>
                    <a href="" class="header__navbar-link header__navbar-linkqs">samsung</a>
                </div>
                <div class="shipping-address ">
                    <a href="" class="header__navbar-link header__navbar-link--addr"><i class="header__navbar-icon fas fa-map-marker-alt"></i>Giao đến:</a>
                    <a href="~/ShipipingAddress/ShippingAddress" class="address-display">
                        Q. 1, P. Bến Nghé, Hồ Chí Minh
                    </a>
                </div>
            </div>
            <div>
                <a href="" class="header-policy" style="text-decoration:none;">
                    <div class="header__navbar-link header__navbar-link--totnhanh" style="padding-top:1px;">
                        Cam kết
                    </div>
                    <div>
                        <div class="address-display address-display--policy" style="border-left:none;">
                            <img style="width:20px; height:20px;" src="https://salt.tikicdn.com/ts/upload/96/76/a3/16324a16c76ee4f507d5777608dab831.png" />
                            <span style="padding-top:4px;">100% hàng thật</span>
                        </div>
                        <div class="address-display address-display--policy">
                            <img style="width:20px; height:20px;" src="https://salt.tikicdn.com/ts/upload/0b/f2/19/c03ae8f46956eca66845fb9aaadeca1e.png" />
                            <span style="padding-top:4px;">Hoàn 200% nếu hàng giả</span>
                        </div>
                        <div class="address-display address-display--policy">
                            <img style="width:20px; height:20px;" src="https://salt.tikicdn.com/ts/upload/3a/f4/7d/86ca29927e9b360dcec43dccb85d2061.png" />
                            <span style="padding-top:4px;">30 ngày đổi trả</span>
                        </div>
                        <div class="address-display address-display--policy">
                            <img style="width:20px; height:20px;" src="https://salt.tikicdn.com/ts/upload/87/98/77/fc33e3d472fc4ce4bae8c835784b707a.png" />
                            <span style="padding-top:4px;">Giao nhanh 2h</span>
                        </div>
                        <div class="address-display address-display--policy">
                            <img style="width:20px; height:20px;" src="https://salt.tikicdn.com/ts/upload/6a/81/06/0675ef5512c275a594d5ec1d58c37861.png" />
                            <span style="padding-top:4px;">Giá siêu rẻ</span>
                        </div>
                        <div class="address-display address-display--policy">
                            <img style="width:20px; height:20px;" src="https://salt.tikicdn.com/ts/upload/11/09/ec/456a2a8c308c2de089a34bbfef1c757b.png" />
                            <span style="padding-top:4px;">Free ship mọi nơi</span>
                        </div>
                    </div>
                </a>
            </div>
        </div>
    </header>
    <div class="grid">
        <div class="grid__row">
            <div class="grid_column-4">
                <div class="product-preview">
                    <div class="product-preview__img" style="background-image: url(@Html.DisplayFor(model => model.product.ProductImage))"></div>
                    <hr />
                    <div>
                        <img src="https://salt.tikicdn.com/ts/ta/d3/d4/1c/1d4ee6bf8bc9c5795529ac50a6b439dd.png" alt="icon-left" width="24" height="24">
                        Xem thêm Ưu điểm & lưu ý của sản phẩm
                    </div>
                </div>
            </div>

            <div class="grid_column-5">
                <div class="product-preview">
                    <h3 class="home__category-item__rating" style="text-transform:uppercase;">Thương hiệu: &nbsp; @Html.DisplayFor(model => model.product.Category.CategoryName)</h3>
                    <h3 class="home__category-item__name">@Html.DisplayFor(model => model.product.ProductName)</h3>
                    <div class="home__category-item__price">Giá: &nbsp; @Html.DisplayFor(model => model.product.ProductPrice)<sup>₫</sup></div>
                    <div class="home__category-item__rating has-border" style="margin-top:8px;">
                        <i class="fas fa-star" style="color: rgb(255, 196, 0);"></i>
                        <i class="fas fa-star" style="color: rgb(255, 196, 0);"></i>
                        <i class="fas fa-star" style="color: rgb(255, 196, 0);"></i>
                        <i class="fas fa-star" style="color: rgb(255, 196, 0);"></i>
                        <i class="fas fa-star" style="color: rgb(255, 196, 0);"></i>
                        <span style="border-left:1px solid; padding-left:5px; border-color:lightgray">
                            Đã bán&nbsp; @Html.DisplayFor(model => model.product.OrderDetails.Count)
                        </span>
                    </div>
                </div>
                <div class="product-preview">
                    <h3 class="category__heading category__heading-detail">Sản phẩm tương tự</h3>
                    @Html.Partial("PartialViewRelatedProduct", Model)
                </div>
                <div class="product-preview">
                    <h3 class="category__heading category__heading-detail">Top Deals</h3>
                    @Html.Partial("PartialViewTopProduct", Model)
                </div>
                <div class="product-preview">
                    <h3 class="category__heading category__heading-detail">Mô tả sản phẩm</h3>
                    @Html.DisplayFor(model => model.product.ProductDescription)
                </div>

            </div>

            <div class="grid_column-3">
                <div class="product-preview">
                    <div class="tiki-trading">
                        <img class="tiki-trading-img" src="https://vcdn.tikicdn.com/ts/seller/d1/3f/ae/13ce3d83ab6b6c5e77e6377ad61dc4a5.jpg" />
                        <span style="color:black;">Tiki Trading</span>
                    </div>
                    <hr />
                    @using (Html.BeginForm("ProductDetail", "Home", FormMethod.Get))
                    {

                        <h3 class="category__heading category__heading-detail">Số lượng</h3>
                        <p>
                            @Html.TextBoxFor(model => model.quantity, new
                   {
                       @class = "form-control",
                                @type = "number",
                                @min = 1
                   })
                        </p>
                        <h3 class="category__heading category__heading-detail">Tạm tính</h3>
                        <p>@Model.estimate.ToString("N0")</p>
                        <div style="margin-bottom:5px;">
                            <button type="button" class="btn btn-danger" style="width:100%">Mua ngay</button>
                        </div>
                        <div>
                            @Html.ActionLink("Thêm vào giỏ", "AddToCart", "Cart", new
                       {
                           id = Model.product.ProductID,
                                quantity = Model.quantity
                            }, new
                           {
                               @class = "btn btn-outline-primary",
                                @style = "width:100%"
                           })
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</body>
</html>
