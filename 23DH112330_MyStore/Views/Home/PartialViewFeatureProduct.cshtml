@model _23DH112330_MyStore.Models.ViewModel.HomeProductVM
@{
    ViewBag.Title = "Customer Home Page";
    <link rel="stylesheet" type="text/css" href="~/Content/script/All-css.css" />
}
@if (Model.FeaturedProducts != null && Model.FeaturedProducts.Any())
{
    <div class="d-flex flex-nowrap overflow-auto" style="scroll-snap-type: x mandatory;">
        @foreach (var product in Model.FeaturedProducts)
        {
            <div class="body3_each_product" style="scroll-snap-align: start;">
                <a href="@Url.Action("ProductDetail", "Home", new {id = product.ProductID})" style="text-decoration:none;color:black;">
                    <div class="product_item">
                        <div class="inner_image">
                            <img nh-lazy="image" class="img-fluid" src="@Html.DisplayFor(modelItem => product.ProductImage)" style="">
                        </div>
                        <div class="inner_content">
                            <h4 class="product_title">
                                @Html.DisplayFor(modelItem => product.ProductName)
                            </h4>
                            <div class="price">
                                <span class="price_amount">
                                    @Html.DisplayFor(modelItem => product.ProductPrice)
                                </span>
                            </div>
                            <div class="btn-product-action">
