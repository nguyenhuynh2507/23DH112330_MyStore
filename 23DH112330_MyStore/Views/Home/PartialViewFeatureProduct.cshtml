@model _23DH112330_MyStore.Models.ViewModel.HomeProductVM
@{
    ViewBag.Title = "Customer Home Page";
    <link rel="stylesheet" type="text/css" href="~/Content/script/All-css.css" />
}
@if (Model.FeaturedProducts != null && Model.FeaturedProducts.Any())
{
    <h2>SẢN PHẨM NỔI BẬT</h2>
    <div class="grid__row" style="margin-left: -36px; margin-right: -36px;">
        @foreach (var product in Model.FeaturedProducts)
        {

            <div class="grid_column-2_5">
                <div class="home__product-item">
                    <div>
                        <a href="@Url.Action("ProductDetail", "Home", new {id = product.ProductID})">
                            <div class="home__product-item__img" style="background-image: url(@Html.DisplayFor(modelItem => product.ProductImage));"></div>
                        </a>
                    </div>
                    <div class="home__category-item__price">@Html.DisplayFor(modelItem => product.ProductPrice)<sup>₫</sup></div>
                    <h3 class="home__category-item__rating" style="text-transform:uppercase;">@Html.DisplayFor(modelItem => product.Category.CategoryName)</h3>
                    <h3 class="home__category-item__name">@Html.DisplayFor(modelItem => product.ProductName)</h3>
                    <div class="home__category-item__rating has-border" style="margin-top:8px;">
                        <i class="fas fa-star" style="color: rgb(255, 196, 0);"></i>
                        <i class="fas fa-star" style="color: rgb(255, 196, 0);"></i>
                        <i class="fas fa-star" style="color: rgb(255, 196, 0);"></i>
                        <i class="fas fa-star" style="color: rgb(255, 196, 0);"></i>
                        <i class="fas fa-star" style="color: rgb(255, 196, 0);"></i>
                        <span style="border-left:1px solid; padding-left:5px; border-color:lightgray">
                            Đã bán&nbsp; @Html.DisplayFor(modelItem => product.OrderDetails.Count)
                        </span>
                    </div>
                    <div class="shipping-ads" style="margin-top:34px;">
                        <img width="32" height="16" src="~/Content/sliderimgsrc/categoryicon/now.png" />
                        <span class="idk-man">Giao siêu tốc 2h</span>
                    </div>
                </div>
            </div>
        }
    </div>
}
